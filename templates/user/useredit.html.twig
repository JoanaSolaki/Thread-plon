{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block main %}
    {% if id == app.user.id %}
        <h1>Modifier le profil</h1>

        {{ form_start(formUserEdit) }}
            {{ form_row(formUserEdit.email) }}
            {{ form_row(formUserEdit.plainPassword) }}
            {{ form_row(formUserEdit.username) }}
            <button type="submit" class="btn btn_full">Modifier</button>
        {{ form_end(formUserEdit) }}
    {% endif %}

    {% if id != app.user.id %}
        <h1>Nope.</h1>
    {% endif %}
{% endblock %}